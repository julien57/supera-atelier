{% extends 'base.html.twig' %}

{% block body %}
    <section class="hero_in general start_bg_zoom" style="background-image:url({{ asset('img/atelier-pain.jpg') }});background-position:bottom;background-repeat:no-repeat;background-attachment:fixed;background-size:cover">
        <div class="wrapper">
            <div class="container">
                <h1 class="fadeInUp animated"><span></span>Ma carte cadeau</h1>
            </div>
        </div>
    </section>

    <div class="bg_color_1">
        <div class="container margin_60_35">
            <div class="form_title">
                <h3>Valider ma carte cadeau</h3>
                <p>Vous avez reçu une carte cadeau PassionAtelier ? Entrez le code à 13 caractères de votre carte dans le champ ci-dessous pour l'activer.</p>
            </div>

            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="row mb-5">
                <div class="col-sm-6 m-auto">
                    {% for message in app.flashes('notice') %}
                        <div class="alert alert-danger mt-3">
                            {{ message }}
                        </div>
                    {% endfor %}
                    <div class="form-groupo mt-5">
                        {{ form_label(form.code) }}
                        {{ form_widget(form.code, {'attr': {'class': 'form-control'}}) }}
                        <small style="color:red">{{ form_errors(form.code) }}</small>
                    </div>
                    <button type="submit" class="btn_1 mt-3" id="submit-review" style="color:white;font-weight:600;font-size:inherit;float: right">Valider mon code</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
