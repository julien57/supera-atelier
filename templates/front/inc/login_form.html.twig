{% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

{% if app.user %}
    <div class="mb-3">
        Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
    </div>
{% endif %}
<form method="post">
    <div class="form-group">
        <label>Email</label>
        <input type="email" value="{{ last_username }}" class="form-control" name="mail" id="email" required>
        <i class="icon_mail_alt"></i>
    </div>
    <div class="form-group">
        <label>Mot de passe</label>
        <input type="password" class="form-control" name="password" id="password" value="" required>
        <i class="icon_lock_alt"></i>
    </div>
    <div class="clearfix add_bottom_30">
        <div class="checkboxes float-left">
        </div>
        <div class="float-right mt-1"><a id="forgot" href="{{ path('front_client_forgot_password') }}">Mot de passe oublié ?</a></div>
    </div>
    <button class="btn_1 rounded full-width">Se connecter à SuperAtelier</button>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
</form>